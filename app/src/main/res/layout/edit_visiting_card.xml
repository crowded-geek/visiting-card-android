<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.c1om/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visitingcard.VisitingCardActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100">

    <!--
      TODO: Add profileImage - ImageView ; {Name, Email, PhoneNumber, Github, LinkedIn & Twitter Fields} - EditText
    -->

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:elevation="30dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="78dp"
                    android:layout_weight="25">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profile_img"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="select_img"
                        android:src="@drawable/man" />

                    <EditText
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:maxWidth="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:background="#e60000"
                        android:textColor="#fff"
                        android:hint="Name"
                        android:textColorHint="#fff"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:src="@drawable/call" />

                        <EditText
                            android:id="@+id/profile_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="#fff"
                            android:hint="xxx-xxxx-xxx"
                            android:inputType="phone"
                            android:maxWidth="200dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:src="@drawable/mail" />

                        <EditText
                            android:id="@+id/profile_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="#fff"
                            android:hint="email@domain.com"
                            android:inputType="textEmailAddress"
                            android:maxWidth="200dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/linkedin"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/profile_linkedin"
                        android:layout_width="wrap_content"
                        android:maxWidth="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#e60000"
                        android:layout_gravity="center_vertical"
                        android:hint="linkedin.com/xxxxx"
                        android:padding="5dp"
                        android:inputType="textUri"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:textColorHint="#fff"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/twitter"/>
                    <EditText
                        android:id="@+id/profile_twitter"
                        android:layout_width="wrap_content"
                        android:maxWidth="200dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:inputType="textUri"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="#fff"
                        android:textColor="#fff"
                        android:background="#e60000"
                        android:textAlignment="center"
                        android:hint="twitter.com/xxxxx"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/git"/>

                    <EditText
                        android:id="@+id/profile_github"
                        android:layout_width="wrap_content"
                        android:maxWidth="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#e60000"
                        android:hint="github.com/xxxxx"
                        android:inputType="textUri"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColorHint="#fff"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_below="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:soundEffectsEnabled="true"
        android:src="@drawable/round_save_white_36"
        app:elevation="17dp"
        app:fabSize="normal"
        app:layout_anchor="@+id/include"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:rippleColor="@color/colorAccent" />
</LinearLayout>
